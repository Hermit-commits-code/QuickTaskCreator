  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "users:read",
        "channels:read",
        "groups:read",
        "im:read",
        "mpim:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://cubistic-glossingly-reynalda.ngrok-free.dev/slack/events",
      "bot_events": ["app_home_opened"]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://cubistic-glossingly-reynalda.ngrok-free.dev/slack/events"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false
  }
